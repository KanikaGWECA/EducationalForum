                    borderWidth: 1
                }, {
                    label: '# of Comments',
                    data: [40, 10, 1, 5, 2, 3, 0, 0, 2, 1, 4, 1],
                    backgroundColor: loadcolors('rgba(153, 102, 255, 0.2)'),
                    borderColor: loadcolors('rgba(153, 102, 255, 1)'),
                    borderWidth: 1
                }]
            },
            options: {
                plugins: {
                    title: {
                        display: true,
                        text: 'Credit chart'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>